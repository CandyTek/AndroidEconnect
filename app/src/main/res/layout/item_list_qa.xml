<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey_ddd">

    <View
        android:id="@+id/top_diver"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/light_grey_ddd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/accent_green"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="1"/>

            <TextView
                android:id="@+id/tv_qa_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_primary"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:text="怎样遥控电脑?"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:text="连接电脑"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/text_second_color_primary"/>

    </LinearLayout>


</LinearLayout>